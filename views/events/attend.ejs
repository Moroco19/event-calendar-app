<%- include('../partials/boilerplate') %>
<%- include('../partials/nav') %>
<div class="event-item">
    <h3>RSVP for Event <%= eventI.event_name %> on <%= moment(eventI.event_date ).format("MM/DD")%></h3>
    <form id="attendform" method="POST" action="/events/attend">
        <input type="hidden" name="event_id" value="<%= eventI.id %>" />
        <input type="hidden" name="user_id" value="<%= userNav.id %>" />
        <input type="hidden" name="confirmation" value="Yes" />
        <input type="submit" value="Confirm Attendance" />
    </form>
    <a href="/events/">Back to all events</a>
</div>
<%- include('../partials/end') %>