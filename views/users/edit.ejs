<%- include('../partials/boilerplate') %>
<%- include('../partials/nav') %>
<div class="user-profile">
    <h3>Edit Profile</h3>
    <form method="POST" action="/user">
        <input name="username" type="text" value="<%= user.username %>" placeholder="<%= user.username %>" />
        <input name="email" type="text" value="<%= user.email %>" placeholder="<%= user.email %>" />
        <input name="name" type="text" value="<%= user.name %>" placeholder="<%= user.name %>" />
        <input type="submit" value="Save" />
    </form>
    <a href="/user/<%= userNav.id %>"><button>Cancel</button></a>
</div>
<%- include('../partials/end') %>